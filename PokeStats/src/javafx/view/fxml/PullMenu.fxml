<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.view.PullMenu?>

<PullMenu fx:controller="javafx.view.PullMenu" maxWidth="200.0"
	minWidth="0.0" maxHeight="Infinity" minHeight="0.0" collapsible="false"
	focusTraversable="false" text="Pokemon" BorderPane.alignment="CENTER"
	xmlns:fx="http://javafx.com/fxml/1">
	<content>
		<VBox maxWidth="Infinity" minWidth="-Infinity" maxHeight="Infinity"
			minHeight="-Infinity">
			<children>
				<Label text="ID:">
					<padding>
						<Insets left="5.0" right="5.0" top="3.0" />
					</padding>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<TextField fx:id="idField" promptText="ID#" focusTraversable="false" />
				<Label text="Name:">
					<padding>
						<Insets left="5.0" right="5.0" top="3.0" />
					</padding>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<TextField fx:id="nameField" promptText="Name" />
				<Label text="HP: ">
					<padding>
						<Insets left="5.0" right="5.0" top="3.0" />
					</padding>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<TextField fx:id="hpField" promptText="HP (IV)" />
				<Label text="Attack:">
					<padding>
						<Insets left="5.0" right="5.0" top="3.0" />
					</padding>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<TextField fx:id="attackField" promptText="Attack (IV)" />
				<Label text="Defense">
					<padding>
						<Insets left="5.0" right="5.0" top="3.0" />
					</padding>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<TextField fx:id="defenseField" promptText="Defense (IV)" />
				<Label text="SP. Atk:">
					<padding>
						<Insets left="5.0" right="5.0" top="3.0" />
					</padding>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<TextField fx:id="spaField" promptText="SP. Atk (IV)" />
				<Label text="SP. Def:">
					<padding>
						<Insets left="5.0" right="5.0" top="3.0" />
					</padding>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<TextField fx:id="spdField" promptText="SP Def (IV)" />
				<Label text="Speed:">
					<padding>
						<Insets left="5.0" right="5.0" top="3.0" />
					</padding>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<TextField fx:id="speedField" promptText="Speed (IV)" />
				<Button defaultButton="true" focusTraversable="false"
					mnemonicParsing="false" onAction="#addPokemon" text="Add" />
			</children>
		</VBox>
	</content>
</PullMenu>